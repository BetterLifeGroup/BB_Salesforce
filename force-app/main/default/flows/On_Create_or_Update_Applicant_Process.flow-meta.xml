        <defaultConnectorLabel>IDV Status did not change</defaultConnectorLabel>
        <rules>
            <name>IDV_Status_Changed</name>
            <conditionLogic>1 AND (2 OR 3)</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior.IDV_Status__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>$Record.IDV_Status__c</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.IDV_Status__c</leftValueReference>
                <operator>EqualTo</operator>
