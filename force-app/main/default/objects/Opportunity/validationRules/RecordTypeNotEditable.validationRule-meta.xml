<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RecordTypeNotEditable</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISNEW()),
ISCHANGED(RecordTypeId),NOT($Profile.Name = &quot;System Administrator&quot;))</errorConditionFormula>
    <errorMessage>The record type field is not allowed to be edited.</errorMessage>
</ValidationRule>
